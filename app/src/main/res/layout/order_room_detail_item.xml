<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/shape_circle_pad_white"
    >


    <ImageView
        android:id="@+id/order_detail_room_picture"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp60"
        android:layout_marginRight="20dp"
        android:background="@drawable/small_ktv"/>

        <TextView
            android:id="@+id/order_detail_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="房间名字"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/order_detail_room_picture"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/order_detail_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/order_detail_room_name"
            android:layout_alignLeft="@+id/order_detail_room_name"
            />


        <TextView
            android:id="@+id/order_detail_room_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <ImageView
            android:id="@+id/iv_order_detail_room_change"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/order_detail_change_normal"
            android:layout_below="@+id/order_detail_room_price"
            android:clickable="true" />
</RelativeLayout>