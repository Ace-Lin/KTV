<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShiftActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/b1"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo_npt"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_corner_border"
            android:elevation="7dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/linear_layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/night_biz_pc_account_username_icon"/>

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:hint="账号"
                    android:inputType="textAutoComplete"
                    android:lines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:maxLines="1"
                    android:textColorHint="#b3b3b0"
                    android:textSize="15sp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/midle_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_layout_user_name"
                android:layout_marginLeft="30dp"
                android:background="#cacaca"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_pwd"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/midle_line"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/night_biz_pc_account_pwd_icon"/>

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:maxLines="1"
                    android:textColorHint="#b3b3b0"
                    android:textSize="15sp"/>



            </LinearLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_border_radius"
            android:elevation="5dp"
            android:text="登   录"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:id="@+id/linear_layout_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_corner_border"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp"
                android:paddingTop="15dp"
                android:text="没有账号?  立即注册"
                android:textColor="#3e3e3e"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/biz_ask_my_publish_arrow"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_login_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="密码找回"
            android:clickable="true"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>