<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/shape_circle_pad_white">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/order_room_image"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp80"
        android:background="@color/bg_gray"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/order_room_image"
        >

        <TextView
            android:id="@+id/order_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/room_name"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/order_amount"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/coloryellow"
            android:text="@string/order_amount"
            android:textSize="20dp"
            />

    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        >

        <Button
            android:id="@+id/order_btn_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="18dp"
            android:minHeight="0dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_pay_red"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/order_btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pay"
            android:textSize="18dp"
            android:minHeight="0dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_pay_red"
            android:textAllCaps="false"
            />
    </LinearLayout>



</LinearLayout>