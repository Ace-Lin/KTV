<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:background="@drawable/shape_circle_pad_white"
    >


    <ImageView
        android:id="@+id/order_room_picture"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/small_ktv"/>

        <TextView
            android:id="@+id/order_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="房间名字"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/order_room_picture"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/order_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/order_room_name"
            android:layout_alignLeft="@+id/order_room_name"
            />


        <TextView
            android:id="@+id/order_room_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/order_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />



</RelativeLayout>