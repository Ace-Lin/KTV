<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/setting_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        >

        <Button
            android:id="@+id/btn_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="2019-8"
            android:textSize="18dp"
            android:drawableRight="@drawable/down_arrow"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_btn_circle_white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_turnover"
            android:textSize="20dp"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_turnover"

            />

        <TextView
            android:id="@+id/txt_turnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="222113"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>


    <ListView
        android:id="@+id/history_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        android:padding="8dp"
        >

    </ListView>



</LinearLayout>