<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/product_image"
            />
        <TextView
            android:id="@+id/tv_item_detail_bought_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="商品名称"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/iv_item_detail_bought_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#0000"
                android:src="@drawable/item_product_add"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_item_detail_bought_num"
                android:text="1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                />
            <ImageButton
                android:id="@+id/iv_item_detail_bought_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#0000"
                android:layout_gravity="center_vertical"
                android:src="@drawable/item_product_sub"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_detail_bought_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="50dp"
            android:text="0"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="right">
        <TextView
            android:id="@+id/tv_item_detail_order_bought_num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/product_order_num"
            android:layout_toLeftOf="@+id/tv_item_detail_stock"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/tv_item_detail_bought_stock"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/product_stock"
            android:gravity="right"
            />
    </LinearLayout>


</LinearLayout>
