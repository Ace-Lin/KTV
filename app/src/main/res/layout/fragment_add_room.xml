<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.AddRoomFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/room_type"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/room_type_spinner"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:dropDownVerticalOffset="30dp"
            />

        <!-- android:dropDownWidth="100dp"-->

    </LinearLayout>

    <View    android:layout_width="match_parent"     android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/room_name"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/add_room_no"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:singleLine="true"
            android:background="@null"/>

    </LinearLayout>

    <View    android:layout_width="match_parent"    android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/room_price"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/add_room_price"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@null"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_room"
        android:layout_marginTop="80dp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Save"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:background="@drawable/half_round_shape"
        />


</LinearLayout>